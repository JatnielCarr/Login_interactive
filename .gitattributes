# Flutter/Dart specific
*.dart linguist-language=Dart
*.yaml linguist-language=YAML

# Set default behavior to automatically normalize line endings
* text=auto

# Dart
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Archives
*.7z binary
*.gz binary
*.jar binary
*.rar binary
*.tar binary
*.zip binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg text

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Videos
*.mp4 binary
*.mov binary
*.avi binary

# Android
*.apk binary
*.aab binary
*.so binary

# iOS
*.framework binary
*.a binary

# Gradle
gradlew text eol=lf
gradlew.bat text eol=crlf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
